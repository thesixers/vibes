{
  "name": "vibes-desktop",
  "version": "1.0.7",
  "type": "module",
  "description": "A beautiful cross-platform music player with liquid glass UI",
  "homepage": "https://github.com/vibes/vibes-desktop",
  "main": "main.js",
  "author": {
    "name": "NA.",
    "email": "the.sixers.com@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"vite\" \"electron .\"",
    "build": "vite build",
    "build:linux": "npm run build && electron-builder --linux",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:all": "npm run build && electron-builder -mwl"
  },
  "keywords": [
    "electron",
    "music",
    "player",
    "desktop"
  ],
  "dependencies": {
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "lucide-react": "^0.294.0",
    "music-metadata": "^11.10.3",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^7.11.0",
    "spotify-web-api-node": "^5.0.2",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.3.6",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.vibes.desktop",
    "productName": "Vibes",
    "publish": [
      "github"
    ],
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "assets/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Audio",
      "icon": "build/icons",
      "maintainer": "NA.",
      "synopsis": "A GeNeSix Desktop Music Player",
      "description": "Cross-platform music player with local file management and smart metadata fetching."
    },
    "deb": {
      "depends": [
        "libnotify4",
        "libxtst6",
        "libnss3",
        "libappindicator1"
      ]
    },
    "rpm": {
      "depends": [
        "libnotify",
        "libXtst",
        "nss"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon.icns",
      "category": "public.app-category.music"
    }
  }
}